{% extends 'layout.html.j2' %}

{% block content %}
<div class="min-h-screen flex items-center justify-center bg-base-200 font-sans text-base-content px-4">
  <div class="w-full max-w-sm bg-base-100 rounded-lg shadow-lg border border-base-300 p-8">
    
    {% if message %}
    <div class="alert alert-info mb-6 text-sm">
      {{ message }}
    </div>
    {% endif %}

    <h1 class="text-3xl font-bold text-center mb-8 uppercase text-primary">
      Login
    </h1>

    <form hx-post="/login" hx-target="body" hx-ext="json-enc" class="space-y-5">
      <div class="form-control">
        <label for="email" class="label">
          <span class="label-text uppercase text-xs font-semibold">Email</span>
        </label>
        <input type="email" name="email" id="email" placeholder="you@example.com" required
          class="input input-bordered w-full bg-base-200 text-base-content" />
      </div>

      <div class="form-control">
        <label for="password" class="label">
          <span class="label-text uppercase text-xs font-semibold">Password</span>
        </label>
        <input type="password" name="password" id="password" placeholder="••••••••" required
          class="input input-bordered w-full bg-base-200 text-base-content" />
      </div>

      <div>
        <button type="submit" class="btn btn-primary w-full uppercase tracking-wide">
          Login
        </button>
      </div>
    </form>
  </div>
</div>
{% endblock %}