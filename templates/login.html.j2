{% extends 'layout.html.j2' %}

{% block content %}
<div class="flex items-center justify-center pt-50 bg-neutral-100 text-black font-serif">
  <div class="w-full max-w-md border border-black bg-white p-8">
    {% if message %}
    <div class="mb-4 border border-black bg-white px-4 py-2 text-center">
      {{ message }}
    </div>
    {% endif %}

    <h1 class="text-2xl uppercase mb-6 text-center">Login</h1>

    <form hx-target="body" hx-post="/login" hx-ext="json-enc" class="space-y-6">
      <div>
        <label for="email" class="block text-sm uppercase tracking-wide mb-1">Email</label>
        <input type="text" name="email" id="email" placeholder="you@example.com" required
          class="w-full px-3 py-2 border border-black bg-transparent focus:outline-none focus:ring-0 placeholder-gray-500">
      </div>

      <div>
        <label for="password" class="block text-sm uppercase tracking-wide mb-1">Password</label>
        <input type="password" name="password" id="password" placeholder="••••••••" required
          class="w-full px-3 py-2 border border-black bg-transparent focus:outline-none focus:ring-0 placeholder-gray-500">
      </div>

      <div>
        <button type="submit"
          class="w-full px-4 py-2 border border-black bg-black text-white uppercase tracking-wider hover:bg-white hover:text-black transition-colors duration-200">
          Login
        </button>
      </div>
    </form>
  </div>
</div>
{% endblock %}
