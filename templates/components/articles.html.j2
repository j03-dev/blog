{% if articles %}
<section class="min-h-screen bg-base-100 py-12 px-4 md:px-12 lg:px-24 font-sans text-base-content">
  <div class="space-y-10">
    {% for article in articles %}
    <article class="bg-white border border-neutral rounded-lg shadow-md p-6 hover:shadow-lg transition-all duration-300">
      <h2 class="text-3xl font-bold text-primary mb-2">{{ article.title }}</h2>
      <p class="text-sm text-neutral-content italic mb-3">
        {{ article.at }} — by <span class="underline">{{ article.author.name }}</span>
      </p>
      <div class="prose max-w-none line-clamp-4 mb-5">
        {{ article.content|safe }}
      </div>
      <a href="/articles/{{ article.id }}"
        class="btn btn-sm btn-outline btn-primary uppercase tracking-wide">
        Read More →
      </a>
    </article>
    {% endfor %}
  </div>
</section>
{% endif %}
